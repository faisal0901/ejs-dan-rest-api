<%-include('../../partial/Header.ejs')%>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%-include('../../partial/Sidebar.ejs')%>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%-include('../../partial/Navbar.ejs')%>

      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
      </div>

      <h1 class="h3 mb-4 text-gray-800">Item</h1>
      <% if(action=='view') {%>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a
            class="nav-link active"
            id="show-tab"
            data-toggle="tab"
            href="#show"
            role="tab"
            aria-controls="show"
            aria-selected="true"
            >show</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            id="profile-tab"
            data-toggle="tab"
            href="#add"
            role="tab"
            aria-controls="add"
            aria-selected="false"
            >Add</a
          >
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <%- include('show_table_item.ejs') %> <%- include('add_item.ejs') %>
      </div>

      <%} else if(action =="show image") { %>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a
            class="nav-link active"
            id="show-tab"
            data-toggle="tab"
            href="#show-image"
            role="tab"
            aria-controls="show"
            aria-selected="true"
            >show image
          </a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <%- include('show_image_item.ejs') %>
      </div>

      <% }else{%>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a
            class="nav-link active"
            id="edit-tab"
            data-toggle="tab"
            href="#edit-item"
            role="tab"
            aria-controls="home"
            aria-selected="true"
            >Edit Item</a
          >
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <%- include('edit_item.ejs') %>
      </div>
      <% } %>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%-include('../../partial/Footer.ejs')%>
    <%-include('../../partial/js.ejs')%>
  </div>
</div>
<script>
  CKEDITOR.replace("about");
</script>
