<div class="card shadow mb-4 mt-2">
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="https://ejsrestapi.herokuapp.com/<%=booking.payments.proofPayment %>"
          alt="image"
          style="width: 100%; display: block"
        />
        <% if( booking.payments.status =="Proses"){%>
        <div class="button d-flex">
          <form
            action="/admin/booking/<%=booking.id %>/confirmation?_method=PUT"
            method="post"
          >
            <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"></i>
              confirmation
            </button>
          </form>
          <form
            action="/admin/booking/<%=booking.id %>/reject?_method=PUT"
            method="post"
          >
            <button type="submit" class="btn btn-danger btn-sm">
              <i class="fas fa-times"></i>
              reject
            </button>
          </form>
        </div>
        <%} %>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank from</th>
                <th>title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%=booking.memberId.firstName %> <%=booking.memberId.lastName
                  %>
                </td>
                <td>$<%=booking.total %></td>
                <td><%=booking.payments.bankFrom %></td>
                <td><%=booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<a href="/admin/item" class="btn btn-warning">Back</a>
